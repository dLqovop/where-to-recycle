<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="오 늘 은"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="#FA3434"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#CACACA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/border"
            android:foregroundTint="#E91E63"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="  오늘 배출 가능" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#CACACA" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center"
                android:text="플라스틱"
                android:textColor="#337427"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="18dp"
            android:background="@drawable/border"
            android:backgroundTintMode="src_over"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="  매일 배출 가능" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#CACACA" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:gravity="center"
                android:text="스티로폼, 병류,캔•고철류, 종량제봉투, 음식물류"
                android:textColor="#337427"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:padding="5dp"
        android:text="배출 시간: 오후 3시 ~ 새벽 4시 (15:00 ~ 04:00)"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_week"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/baseline_navigate_next_24"
        android:text="요일 별 배출 가능 쓰레기"
        android:backgroundTint="#B7E3B0"
        android:textStyle="bold"
        android:textColor="#337427"
        app:iconTint="#B7E3B0"
        />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_margin="10dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    종류별 배출방법 "
                android:textSize="20sp"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/button_paper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#CCE4C8"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:text="종이류, 종이팩" />

            <Button
                android:id="@+id/button_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#CCE4C8"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:text="금속캔, 고철" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_glass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#CCE4C8"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:text="유리병류" />

            <Button
                android:id="@+id/button_plastic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#CCE4C8"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:text="플라스틱류" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_vinyl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#CCE4C8"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:text="비닐류" />

            <Button
                android:id="@+id/button_styro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#CCE4C8"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:text="스티로폼" />
        </TableRow>

    </TableLayout>



</androidx.appcompat.widget.LinearLayoutCompat>